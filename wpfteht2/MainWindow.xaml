<Window x:Class="wpfteht2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfteht2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="eurotomarkka" Content="Convert to Markka" HorizontalAlignment="Left" Height="51" Margin="30,160,0,0" VerticalAlignment="Top" Width="192" Click="eurotomarkka_Click"/>
        <Button x:Name="markkatoeuro" Content="Convert to Euro" HorizontalAlignment="Left" Height="51" Margin="294,160,0,0" VerticalAlignment="Top" Width="191" Click="markkatoeuro_Click"/>
        <TextBox x:Name="amount" HorizontalAlignment="Left" Height="32" Margin="163,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="177"/>
        <TextBlock x:Name="converted" HorizontalAlignment="Left" Height="24" Margin="197,265,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="109"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="48" Margin="163,20,0,0" TextWrapping="Wrap" Text="Insert amount of Euros / Markkas:" VerticalAlignment="Top" Width="127"/>

    </Grid>
</Window>
