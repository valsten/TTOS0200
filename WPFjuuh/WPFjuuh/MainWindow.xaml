<Window x:Class="WPFjuuh.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFjuuh"
        mc:Ignorable="d"
        Title="Shopping List" Height="740" Width="320" FontSize="18" MinHeight="740" MinWidth="320">
    <Grid>
        <StackPanel x:Name="spMarx">
            <CheckBox x:Name="chkBanana" Content="Bananas" Margin="10" />
            <CheckBox x:Name="chkBread" Content="Bread" Margin="10"/>
            <CheckBox x:Name="chkJuice" Content="Orange Juice" Margin="10"/>
            <CheckBox x:Name="chkNoodle" Content="Noodles" Margin="10"/>
            <CheckBox x:Name="chkHam" Content="Ham" Margin="10"/>
            <CheckBox x:Name="chkNuts" Content="Nuts" Margin="10"/>
            <CheckBox x:Name="chkChips" Content="Chips" Margin="10"/>
            <ComboBox x:Name="cbMagazine" Margin="10" />
            <Button x:Name="btnBuy" Content="Add to list" Margin="10" Width="250" Click="btnBuy_Click"/>
            <TextBlock x:Name="txtHeader1" Text="Your shopping list: " Margin="10"/>
            <TextBox x:Name="txbList" Margin="10 0" />
            <Button x:Name="btnAbout" Content="About" Margin="10" Width="75" Click="btnAbout_Click" />
        </StackPanel>
    </Grid>
</Window>
